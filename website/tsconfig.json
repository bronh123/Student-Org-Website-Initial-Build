{
    "include": ["./src/**/*"],
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": ["dom", "ESNext"],
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@hooks/*": ["src/hooks/*"]
        },
        "typeRoots": ["./node_modules/@types", "./src/declarations", "./src/__generated__/gatsby-types.ts"],
        "jsx": "react",
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "preserveConstEnums": true,
        "noEmit": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true
    }
}
